<% layout("/layouts/boilerplate") %>
<body>
    <div class="row col-7 offset-3 mt-4 mb-3 border border-1 rounded">
        <div class="col-7 offset-2">
        <h4 class="text-center mt-3 mb-2">Signup here!</h4>
        <form action="/signup" method="post" novalidate class="needs-validation">
        <div class="mb-2">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" placeholder="enter username" class="form-control" required>
            <div class="invalid-feedback">please enter username</div>
        </div>

        <div class="mb-2">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" placeholder="enter email" class="form-control" required>
            <div class="invalid-feedback">please enter email</div>
        </div>

        <div class="mb-2">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" placeholder="enter password" class="form-control" required>
            <div class="invalid-feedback">please enter password</div>
        </div>
    
        <div class="text-center">
            <button class="btn btn-sm btn-success mt-3 mb-5 ">Signup</button>
        </div>
            </form>
        </div>
    </div>
</body>