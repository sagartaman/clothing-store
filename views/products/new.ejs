<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-6 offset-3">
      <h4>List Your items:</h4>
      <form
        action="/products"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-2">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            name="product[name]"
            id="name"
            placeholder="enter brand name"
            class="form-control"
            required
          />
          <div class="valid-feedback">
            Name Looks good!
          </div>
          <div class="invalid-feedback">
            please enter name
          </div>
        </div>

        <div class="mb-2">
          <label for="imageUrl" class="form-label">ImageUrl</label>
          <input
            type="text"
            name="product[imageUrl]"
            id="imageUrl"
            placeholder="enter brand image"
            class="form-control"
          />
        </div>

        <div class="mb-2">
          <label for="desc">Description</label>
          <textarea
            name="product[description]"
            id="desc"
            placeholder="enter brand description"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">
            description Looks good!
          </div>
          <div class="invalid-feedback">
            please enter description
          </div>
        </div>

        <div class="mb-2">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="product[price]"
            id="price"
            placeholder="enter brand price"
            class="form-control"
            required
          />
          <div class="valid-feedback">
            price Looks good!
          </div>
          <div class="invalid-feedback">
            please enter price
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="size" class="form-label">Size</label>
            <input
              type="text"
              name="product[sizes]"
              id="size"
              placeholder="enter size"
              class="form-control"
              required
            />
            <div class="valid-feedback">
                sizes are good!
              </div>
              <div class="invalid-feedback">
                please enter which sizes
              </div>
          </div>
          <div class="col">
            <label for="colors" class="form-label">Color</label>
            <input
              type="text"
              name="product[colors]"
              id="colors"
              placeholder="enter color"
              class="form-control"
              required
            />
            <div class="valid-feedback">
                colors Looks good!
              </div>
              <div class="invalid-feedback">
                please enter which colors
              </div>
          </div>
        </div>
        <button type="submit" class="btn btn-success mt-3 mb-5">Add</button>
      </form>
    </div>
  </div>
</body>
